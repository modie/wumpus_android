<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gna.moody.wumpus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/title_activity_wumpus" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Wumpus"
            android:label="@string/title_activity_wumpus" >
            <intent-filter>
                <action android:name="android.intent.action.WUMPUSAGENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WumpusSolo"
            android:label="@string/title_activity_wumpus" >
            <intent-filter>
                <action android:name="android.intent.action.WUMPUSPLAYER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Text"
            android:label="@string/title_activity_wumpus" >
            <intent-filter>
                <action android:name="android.intent.action.TEXT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WorldEdit"
            android:label="@string/title_activity_wumpus" >
            <intent-filter>
                <action android:name="android.intent.action.WorldEdit" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapEditor"
            android:label="@string/title_activity_wumpus" >
            <intent-filter>
                <action android:name="android.intent.action.MapEditor" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>